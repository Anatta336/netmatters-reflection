{
  "name": "netmatters-home-reflection",
  "version": "0.2.0",
  "description": "A learning project created as part of the Netmatters SCS training programme.",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@glidejs/glide": "^3.4.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "core-js": "^3.9.1",
    "normalize.css": "^8.0.1",
    "onchange": "^7.1.0",
    "sass": "^1.32.8",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0"
  },
  "browserslist": [
    "defaults"
  ],
  "main": "src/js/index.js",
  "scripts": {
    "test": ".\\vendor\\bin\\phpunit tests",
    "build-css": "sass src/scss:dist/css",
    "build-js": "webpack --config .webpack.config.js",
    "build-php": "copyfiles -u 1 \"src/*.php\" \"src/views/*.php\" \"dist\"",
    "build-html": "copyfiles -u 1 \"src/**/*.html\" \"dist\"",
    "build-assets": "copyfiles -u 1 \"assets/**/*\" \"dist\"",
    "watch-css": "sass src/scss:dist/css --watch",
    "watch-js": "webpack --config .webpack.config.js --watch",
    "watch-php": "onchange \"src/*.php\" \"src/views/*.php\" -- npm run build-php",
    "watch-html": "onchange \"src/**/*.html\" -- npm run build-html",
    "watch-assets": "onchange \"assets/**/*\" -- npm run build-assets",
    "watch": "concurrently --kill-others-on-fail \"npm:watch-*\"",
    "prepare": "concurrently \"npm:build-*\" \"composer install\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anatta336/netmatters-reflection"
  },
  "author": "Sam Driver",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Anatta336/netmatters-reflection/issues"
  },
  "homepage": "https://github.com/Anatta336/netmatters-reflection#readme"
}
